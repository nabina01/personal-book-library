generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int     @id @default(autoincrement())
  name            String?
  email           String  @unique
  password        String
  phone_number    String?
  profile_picture String?
}

model Books {
  id                Int     @id @default(autoincrement())
  title             String?
  pages             Int
  published_date    DateTime
  blurb             String?
  cover_image       String?
  
   genreId          Int?   
  genre             Genre? @relation(fields: [genreId], references: [id])
  
}

model Author {
  id   Int     @id @default(autoincrement())
  name String?
  bio  String
}

model BookAuthor {
  id       Int    @id @default(autoincrement())
  bookId   Int
  authorId Int
}



model Genre {
  id    Int     @id @default(autoincrement())  
  books Books[]
}